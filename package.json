{
  "name": "finance-theme",
  "version": "1.0.0",
  "description": "A modern finance WordPress theme with TailwindCSS integration",
  "author": "Alexandre Machado",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "block-theme",
    "finance"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/finance-theme.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/finance-theme/issues"
  },
  "homepage": "https://github.com/yourusername/finance-theme#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "clean": "rimraf dist",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:js": "eslint \"src/**/*.{js,jsx}\"",
    "lint": "npm run lint:css && npm run lint:js",
    "format": "prettier --write \"src/**/*.{css,scss,js,jsx,json,md}\"",
    "prepare": "npm run build",
    "start": "npm run dev"
  },
  "dependencies": {
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@wordpress/browserslist-config": "^5.30.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "browserslist": "^4.22.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.77.8",
    "sass-loader": "^13.3.3",
    "style-loader": "^3.3.3",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "eslintConfig": {
    "extends": [
      "wordpress",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jquery": true
    },
    "globals": {
      "jQuery": "readonly",
      "$": "readonly",
      "ajaxurl": "readonly",
      "wp": "readonly",
      "financeTheme": "readonly"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "avoid"
  },
  "files": [
    "dist",
    "src",
    "*.php",
    "*.css",
    "*.json",
    "README.md"
  ],
  "main": "dist/main.js"
}